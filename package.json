{
  "name": "todo-ink",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "build": "npx babel src --out-dir lib --extensions \".js,.jsx,.ts,.tsx\" --source-maps inline",
    "package": "yarn build && npx pkg -t node13-linux,node13-win lib/index.js -o lib/todo-ink",
    "start": "yarn build && DEV=true NODE_ENV=production node ./lib/index.js",
    "fuzzing": "yarn build && NODE_ENV=test node ./lib/fuzzing.js",
    "devtools": "npx react-devtools",
    "test": "jest"
  },
  "dependencies": {
    "external-editor": "^3.1.0",
    "fuse.js": "^6.4.0",
    "ink": "https://github.com/vadimdemedes/ink",
    "ink-testing-library": "^2.0.0",
    "marked": "^1.1.0",
    "marked-terminal": "^4.1.0",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react"
      ],
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/typescript"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/react": "^10.4.3",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.3",
    "@types/marked": "^1.1.0",
    "@types/marked-terminal": "^3.1.1",
    "@types/node": "^14.0.14",
    "@types/ramda": "^0.27.6",
    "@types/react": "^16.9.41",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.2",
    "eslint-plugin-react-hooks": "^4.0.4",
    "import-sort-parser-typescript": "^6.0.0",
    "jest": "^26.1.0",
    "pkg": "^4.4.9",
    "prettier": "^2.0.5",
    "react-devtools": "^4.7.0",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.9.5"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module-compact"
    }
  }
}
