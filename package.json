{
  "name": "todo-ink",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "build": "npx babel src --out-dir lib --extensions \".js,.jsx,.ts,.tsx\" --source-maps inline",
    "package": "yarn build && npx pkg -t node13-linux,node13-win lib/index.js -o lib/todo-ink",
    "start": "yarn build && NODE_ENV=production node ./lib/index.js"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "fuse.js": "^5.2.3",
    "ink": "https://github.com/vadimdemedes/ink",
    "ramda": "^0.27.0",
    "react": "^16.9.34",
    "react-dom": "^16.9.34"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react"
      ],
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/typescript"
    ]
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.9.0",
    "@types/node": "^13.13.2",
    "@types/ramda": "^0.27.4",
    "@types/react": "^16.9.34",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "pkg": "^4.4.8",
    "typescript": "^3.8.3"
  }
}
